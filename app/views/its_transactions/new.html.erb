<h1>Add a new itstransaction</h1>

<%= form_with(model: [@category, @transaction], url: category_its_transactions_path(@category)) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :amount %>
  <%= form.number_field :amount %>

  <%= form.label :categories %>
  <%= form.collection_select :category_ids, current_user.categories, :id, :name, {}, multiple: true %>

  <%= form.submit "Save" %>
<% end %>

<%= link_to "Back", category_its_transactions_path(@category) %>