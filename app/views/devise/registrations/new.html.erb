
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="flex justify-between items-center h-11 bg-[#3778c2] text-white mb-10"> 
    <div class="ml-4 cursor-pointer">
      <%= link_to "<", unauthenticated_root_path %>
    </div>
    <h2 class="uppercase">
      Register
    </h2>
    <div class="actions mr-4 cursor-pointer">
      <%= f.submit "Next" %>
    </div>

  </div>

  <div class="flex flex-col items-end justify-center w-full bg-white border-2 border-t-gray-400  border-b-gray-400">
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field w-11/12">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "mb-2 h-10 w-full ms-auto border-2 border-l-white border-t-white border-b-gray-400  text-gray-400 outline-none" %>
  </div>

  <div class="field w-11/12">
    
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email" , class: "my-2 h-10 w-full border-2 border-l-white border-t-gray-400 border-b-gray-400  text-gray-400 outline-none" %>
  </div>

  <div class="field w-11/12">
    <% if @minimum_password_length %>
    <em class="ml-5">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", class: "my-2 h-10 w-full border-2 border-l-white border-t-gray-400 border-b-gray-400  text-gray-400 outline-none" %>
  </div>

  <div class="field w-11/12">
    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "new-password", class: "mt-2 h-10 w-full border-l-white border-b-white border-2 border-t-gray-400 text-gray-400 outline-none" %>
  </div>

  </div>
<% end %>
