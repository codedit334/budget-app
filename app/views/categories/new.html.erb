<%= form_with(model: @category, url: categories_path) do |form| %>
  <div class="flex justify-between items-center h-11 bg-[#3778c2] text-white mb-10"> 
    <div class="ml-4 cursor-pointer">
      <%= link_to "<", categories_path %>
    </div>
    <h2 class="uppercase">
      New Category
    </h2>
    <div class="actions mr-4 cursor-pointer">
      <%= form.submit 'Save' %>
    </div>
  </div>

  <div class="flex flex-col items-end justify-center w-full bg-white border-2 border-t-gray-400  border-b-gray-400">
  <div class="field w-11/12">
    <%= form.text_field :name, placeholder: "Name", autocomplete: "name", class: "mb-2 h-10 w-full border-2 border-l-white border-t-gray-400 border-t-white  text-gray-400 outline-none" %>
  </div>

  <div class="field w-11/12">
    <%= form.text_field :icon, autofocus: true, autocomplete: "icon", placeholder:"Icon" , class: "mt-2 h-10 w-full border-2 border-l-white border-b-white border-b-gray-400  text-gray-400 outline-none" %>
  </div>
  </div>
<% end %>
